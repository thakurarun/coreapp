@model src.ViewModel.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="form-center">
    <h3 class="plain-text">
        Sign In
    </h3>

    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, htmlAttributes: new { @class = "form-box", role = "form" }))
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <label class="control-label" for="username">Email address</label>
            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @type = "email", @class = "form-control", @placeholder = "Enter Email" })
            @Html.ValidationMessageFor(model => model.Username)
        </div>
        <div class="form-group">
            <label class="control-label" for="password">Password</label>
            @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Password" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="btn-container">
            <button type="submit" class="btn btn-default">Login</button>
        </div>
        <div class="btn-container">
            @Html.ActionLink("Register New", "Register", null, null, new { @class = " plain-text link" })
            <span class="btn-separator"></span>
            @Html.ActionLink("Forgot password", "ForgotPassword", null, null, new { @class = "plain-text link" })
        </div>
    }
</div>